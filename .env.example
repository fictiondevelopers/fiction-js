# JWT Secrets
JWT_SECRET=your-super-secret-key-here
JWT_REFRESH_SECRET=another-secret-key-here
JWT_RESET_SECRET=reset-secret-key-here

# Token Configuration
TOKEN_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Security Settings
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY=5

# Twilio Configuration (if using SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=your-twilio-number 

# SMTP Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=your-smtp-port
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=your-smtp-from-email 

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/your_database_name?schema=public"